<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main" >

    <com.google.android.gms.ads.AdView 
        android:id="@+id/admob"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2884314377778347/2857853914"
     />

    <ImageView
        android:id="@+id/imageView_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admob"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/soundon" />

    <ImageView
        android:id="@+id/imageView_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admob"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:src="@drawable/music_on" />

    <ImageView
        android:id="@+id/imageView_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admob"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
       android:visibility="gone" />

    <com.siliconorchard.myowncandy.customview.MyButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/share"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_click"
        android:text="PLAY"
        android:textColor="#fff"
        android:textSize="35sp"
        android:textStyle="bold" />

    <com.siliconorchard.myowncandy.customview.MyButton
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/score"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/button_click"
        android:onClick="btnShareClicked"
        android:text="SHARE"
        android:textColor="#fff"
        android:textSize="35sp"
        android:textStyle="bold" />

    <com.siliconorchard.myowncandy.customview.MyButton
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/more"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_click"
        android:text="SCORE"
        android:textColor="#fff"
        android:textSize="35sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <com.siliconorchard.myowncandy.customview.MyButton
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView_rate"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_click"
        android:text="MORE"
        android:textColor="#fff"
        android:textSize="35sp"
        android:textStyle="bold" />

    <com.google.android.gms.ads.AdView 
        android:id="@+id/admoba"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2884314377778347/2857853914" />

